<UserControl
    x:Class="ArithmeticaRomana.WPF.Views.RomanKeypadView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ArithmeticaRomana.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="500"
    d:DesignWidth="500"
    mc:Ignorable="d">
    <Grid DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}" Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="0" Columns="4">
            <Button
                x:Name="XButton"
                Command="{Binding SendInputCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"
                Style="{StaticResource ButtonStyle}">
                X
            </Button>
            <Button
                x:Name="DButton"
                Command="{Binding SendInputCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"
                Style="{StaticResource ButtonStyle}">
                D
            </Button>
            <Button
                x:Name="MButton"
                Command="{Binding SendInputCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"
                Style="{StaticResource ButtonStyle}">
                M
            </Button>
            <Button
                Command="{Binding SendInputCommand}"
                CommandParameter="Addition"
                Style="{StaticResource PrimaryButtonStyle}">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE948;" />
            </Button>
        </UniformGrid>
        <UniformGrid Grid.Row="1" Columns="4">
            <Button
                x:Name="VButton"
                Command="{Binding SendInputCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"
                Style="{StaticResource ButtonStyle}">
                V
            </Button>
            <Button
                x:Name="LButton"
                Command="{Binding SendInputCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"
                Style="{StaticResource ButtonStyle}">
                L
            </Button>
            <Button
                x:Name="CButton"
                Command="{Binding SendInputCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"
                Style="{StaticResource ButtonStyle}">
                C
            </Button>
            <Button
                Command="{Binding SendInputCommand}"
                CommandParameter="Subtraction"
                Style="{StaticResource PrimaryButtonStyle}">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE949;" />
            </Button>
        </UniformGrid>
        <UniformGrid Grid.Row="2" Columns="4">
            <Button
                x:Name="IButton"
                Command="{Binding SendInputCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"
                Style="{StaticResource ButtonStyle}">
                I
            </Button>
            <Button Style="{StaticResource ButtonStyle}" Visibility="Hidden">Placeholder</Button>
            <Button Style="{StaticResource ButtonStyle}" Visibility="Hidden">Placeholder</Button>
            <Button
                Command="{Binding SendInputCommand}"
                CommandParameter="Delete"
                Style="{StaticResource SecondaryButtonStyle}">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE94F;" />
            </Button>
        </UniformGrid>
        <UniformGrid Grid.Row="3" Columns="4">
            <Button
                Command="{Binding SendInputCommand}"
                CommandParameter="Switch"
                Style="{StaticResource SecondaryButtonStyle}">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE765;" />
            </Button>
            <Button
                Command="{Binding SendInputCommand}"
                CommandParameter="Clear"
                Style="{StaticResource SecondaryButtonStyle}">
                CL
            </Button>
            <Button Click="Shift_Click" Style="{StaticResource SecondaryButtonStyle}">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE752;" />
            </Button>
            <Button
                Command="{Binding SendInputCommand}"
                CommandParameter="Calculate"
                Style="{StaticResource PrimaryButtonStyle}">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE94E;" />
            </Button>
        </UniformGrid>
    </Grid>
</UserControl>
